@model IEnumerable<ANTS.Models.User>

@{
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
    ViewBag.Title = "ViewUsers";
}

<h2>View Seller</h2>

<p>
    @Html.ActionLink("Back to Index", "/Index")
</p>

<form action="ViewUsers" method="post">
    <input class="form-control" type="text" name="searching" value="" placeholder="Type user name" />
    <input class="form-control" type="submit" class="btn btn-warning" name="Searching" value="Search" />
</form>
<form action="ViewUsers" method="get">
    <input class="form-control" type="submit" class="btn btn-primary" name="Showall" value="Reset" />
</form>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.usertype)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.createdat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usertype)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createdat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { id = item.userid }) |
                @Html.ActionLink("Delete", "DeleteUser", new { id = item.userid })
            </td>
        </tr>
    }

</table>
